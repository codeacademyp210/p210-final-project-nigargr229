@model Area.Models.SystemUsr

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/adminproject/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/adminproject/Public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">


<link href="~/Areas/adminproject/Public/css/sb-admin.css" rel="stylesheet">
<body class="bg-dark">

    <div class="container">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="card card-register mx-auto mt-5">
                <div class="card-header">Register an Account</div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-label-group">
                                        @Html.LabelFor(m => m.Name)
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", type = "text" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                @Html.LabelFor(m => m.Password)
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        }

    </div>
  
    <script src="~/Areas/adminproject/Public/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/adminproject/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/adminproject/Public/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

