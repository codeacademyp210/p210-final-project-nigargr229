@model Area.Models.SystemUsr
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!-- Custom fonts for this template-->
<link href="~/Areas/adminproject/Public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

<!-- Page level plugin CSS-->
<link href="~/Areas/adminproject/Public/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/Areas/adminproject/Public/css/sb-admin.css" rel="stylesheet">


<body class="bg-dark">

    <div class="container">
        
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="card card-login mx-auto mt-5">
                <div class="card-header">Login</div>
                <div class="card-body">
                    @ViewBag.Message
                    <form>
                        <div class="form-group">
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.Name)
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", type = "text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                            </div>
                        </div>

                        <button type="submit" class=" btn btn-block btn-success">Login</button>
                    </form>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="register.html">Register an Account</a>

                    </div>
                </div>
            </div>
        }

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/adminproject/Public/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/adminproject/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/adminproject/Public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/Areas/adminproject/Public/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/adminproject/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/adminproject/Public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
 
    <script src="~/Areas/adminproject/Public/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Areas/adminproject/Public/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/adminproject/Public/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/Areas/adminproject/Public/js/demo/datatables-demo.js"></script>
   



</body>
